@using TravilTripProje.Models.Siniflar
@model List<Blog>

<div class="padding">
    <h4>En Popüler 10 Blog</h4>
    <ul class="list list-pad">
        @{ int i = 1;}
        @foreach (var item in Model)
        {
            if (i % 2 != 0)
            {
                <li class="list-bg"><span>@i.</span><a href="/Blog/BlogDetay/@item.ID/">@item.Baslik</a></li>
            }
            else
            {
                <li class="list-bg1"><span>@i.</span><a href="/Blog/BlogDetay/@item.ID/">@item.Baslik</a></li>
            }
            i++;
        }

    </ul>
    <a href="#" class="link1">See all hotels</a>
</div>
