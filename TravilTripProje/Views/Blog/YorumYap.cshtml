@model TravilTripProje.Models.Siniflar.Yorumlar
@{
    Layout = null;
}
<div class="content-form">
    <h3>Bir Yorum Yapın</h3>
    <form method="post">
        <input type="text" value="@ViewBag.deger" placeholder="ID" required name="BlogID"/>
        <input type="text" placeholder="Kullanıcı Adı" required name="KullaniciAdi" />
        <input type="text" placeholder="Mail Adresi" required name="Mail" />        
        <textarea placeholder="Yorum" name="Yorum"></textarea>
        <input type="submit" value="Gönder" />
    </form>
</div>
